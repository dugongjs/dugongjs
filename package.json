{
	"name": "@dugongjs/root",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"test:watch": "turbo run test:watch",
		"test:typecheck": "turbo run test:typecheck",
		"commit": "cz",
		"prepare": "husky"
	},
	"devDependencies": {
		"commitizen": "^4.3.1",
		"cz-emoji": "1.3.2-canary.2",
		"husky": "^9.1.7",
		"prettier": "^3.5.3",
		"turbo": "^2.5.0",
		"typescript": "5.8.2"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	},
	"config": {
		"commitizen": {
			"path": "cz-emoji"
		}
	}
}
